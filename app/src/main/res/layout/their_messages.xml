<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/messageBody"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:paddingLeft="5dp"
            android:textColor="#00d3c4"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="Rose"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_body"
            android:background="@drawable/their_chat_message"
            android:textColor="#464444"
            android:padding="7dp"
            android:elevation="2dp"
            android:textSize="13dp"
            android:text="How are you doing? This is a long message that should probably wrap."
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/date"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:textSize="10sp"
            android:layout_below="@+id/messageBody"
            android:text="12/05/2019 11:45 PM "
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>